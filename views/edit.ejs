                    <input class="form-control" type="text" name="img" value="<%= kawa.img %>" autocomplete="off" required>
                </div>
    <!--    </div> -->
            </div>
            <div class="form-group">
                <label class="lead">Text content here...</label>
                <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="20" required>
                    <%= kawa.content %>
                </textarea>
            </div>
            <div class="form-group">
                    <button class="btn btn-lg btn-dark btn-block">Update</button>
                </div>
